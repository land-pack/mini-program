/**index.wxss**/
/* pages/manage/manage.wxss */
page{
	background-color: #09131c;
	background-attachment:fixed;
}
.container {
	height: 100%;
	width: 100%;
	color: #a1c5e8;
	font-size: 30rpx;
}

/*页面头部start*/
.page-head {
	height: 70%;
}

.page-button {
	height: 20%;
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 0 20rpx;
}

.page-target {
	display: block;
	width: 169rpx;
	height: 53rpx;
	text-align: center;
	line-height: 53rpx;
	background-color: #172129;
	border-radius: 35rpx;
	color: #395362;
	font-size: 31rpx;
}

.target-value {
	color: #9eb4ca;
}

.page-canvas {
	width: 100%;
	height: 80%;
	display: flex;
	display: -webkit-flex;
	justify-content: space-between;
	align-items: center;
}

.page-canvas canvas {
	width: 100%;
	height: 100%;
}
/*页面头部end*/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

